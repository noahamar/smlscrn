@import 'nib'

*
  box-sizing border-box
  font-smoothing antialiased

html
  height 100%

body
  height 100%
  padding 0
  margin 0
  font-family 'Source Sans Pro',Calibri,Candara,Arial,sans-serif
  font-size 15px
  line-height 1.42857143
  color #333
  background radial-gradient(at bottom, #fff, #dfdfdf)
  background-size cover
