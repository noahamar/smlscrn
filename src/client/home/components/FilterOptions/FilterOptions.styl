@import 'nib'

.FilterOptions
  position relative
  border-radius 6px
  background linear-gradient(to bottom, #fff 0%, #eaeaea 100%)
  box-shadow 0px 1px 0px 0px rgba(0,0,0,0.3), 0px 3px 10px 0px rgba(0,0,0,0.2)
  transition all 0.1s ease

  &:hover
    transform translateY(-1px)
    box-shadow 0px 2px 0px 0px rgba(0,0,0,0.3), 0px 4px 14px 0px rgba(0,0,0,0.2)

.FilterOptions__select
  color: inherit;
  font: inherit;
  margin: 0;
  font-family futura
  font-size 1.3em
  color #4e4e4e
  height 54px
  border-radius 6px
  background none
  border none
  appearance none
  padding 0px 60px 0px 20px
  outline none
  cursor pointer

.FilterOptions__option
  padding 10px

.FilterOptions__triangle
  font-family futura
  color #4e4e4e
  absolute top 25px right 21px
  font-size 2em
  pointer-events none
  color #afafaf
  line-height: 0;
