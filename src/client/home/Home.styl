@import 'nib'

@keyframes home-animation {
  0% {
    opacity 0
  }
  100% {
    opacity 1
  }
}

.Home
  position fixed
  width 100%
  height 100%
  overflow auto
  overflow-x hidden
  // absolute top 0 left 0 bottom 0 right 0
  // background radial-gradient(at bottom, #fff, #dfdfdf)
  opacity 0
  animation-name home-animation
  animation-duration 0.25s
  animation-fill-mode forwards
  animation-timing-function ease

  &__wrapper
    position relative
    padding-bottom 200px
    filter blur(0px)
    transition all 0.2s ease

  &__wrapper--blur
    filter blur(2px)

  &__scroll-loading-wrapper
    position absolute
    bottom 125px
    left 50%
    width 1px
    height 1px
    pointer-events none

  &__scroll-loading
    position absolute
    bottom 0px
    left -18px
    width 36px
    height 36px
    background-image url('./assets/loading.gif')
    background-repeat no-repeat
    background-position center
    display none

  &__scroll-loading--show
    display block
