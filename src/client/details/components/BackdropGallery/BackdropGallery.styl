@import 'nib'

@keyframes backdrop-gallery-animation {
  0% {
    background-position 0 0%
  }
  100% {
    background-position 0 100%
  }
}

@keyframes backdrop-gallery-wrapper-animation {
  0% {
    opacity 0
  }
  100% {
    opacity 1
  }
}

.BackdropGallery
  position relative
  width 100%
  height 352px
  background #6d6d6d
  white-space nowrap
  overflow hidden

  &__wrapper
    display inline-block
    position absolute
    left 0
    height 100%
    opacity 0
    animation-name backdrop-gallery-wrapper-animation
    animation-duration 0.75s
    animation-fill-mode forwards
    animation-timing-function ease

  &__image
    display inline-block
    height 100%

  &__overlay
    absolute top 0 left 0
    width 100%
    height 100%
    background linear-gradient(to bottom, rgba(0,0,0,0.2) 0%,rgba(0,0,0,0.9) 100%)
