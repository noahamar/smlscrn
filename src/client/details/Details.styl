@import 'nib'

animation-duration = 0.4s

@keyframes details-animation {
  0% {
    opacity 0
  }
  100% {
    opacity 1
  }
}

@keyframes details-top-wrapper-animation {
  0% {
    transform translateY(-50px) scale(1.05)
  }
  100% {
    transform translateY(0)
  }
}

@keyframes details-watch-button-animation1 {
  0% {
    transform translateY(-50px) scale(1.05)
  }
  100% {
    transform translateY(0)
  }
}

@keyframes details-poster-tile-animation {
  0% {
    transform translateY(-50px) scale(1.05)
  }
  100% {
    transform translateY(0)
  }
}

@keyframes details-bottom-wrapper-animation {
  0% {
    transform translateY(50px) scale(1.05)
  }
  100% {
    transform translateY(0)
  }
}

.Details
  position fixed
  width 100%
  height 100%
  font-family futura
  color #4e4e4e
  overflow auto
  overflow-x hidden
  opacity 0
  animation-name home-animation
  animation-duration animation-duration
  animation-fill-mode forwards
  animation-timing-function ease

  &__top-wrapper
    position relative
    z-index 2
    animation-name details-top-wrapper-animation
    animation-duration animation-duration
    animation-fill-mode forwards
    animation-timing-function ease

  &__back-button
    absolute top 40px left 30px
    width 66px
    height 66px
    border-radius 6px
    box-shadow 0px 2px 2px 0px rgba(0,0,0,0.7)
    border 2px solid rgba(255, 255, 255, 0.6)
    background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.9) 100%)
    cursor pointer
    transition opacity 0.1s ease

  &__back-button-arrow
    width 100%
    height 100%
    border-radius 6px
    opacity 0.5
    background url('assets/back-button-arrow.svg')
    background-repeat no-repeat
    background-position center
    transition opacity 0.1s ease

  &__back-button:hover
    transform translateY(-1px)
    box-shadow 0px 2px 0px 0px rgba(0,0,0,0.3), 0px 4px 14px 0px rgba(0,0,0,0.2)
    border 2px solid rgba(255, 255, 255, 0.7)

  &__back-button:active
    transform translateY(1px)
    border 2px solid rgba(255, 255, 255, 0.5)
    box-shadow 0px 0px 0px 0px rgba(0,0,0,0.3), 0px 1px 6px 0px rgba(0,0,0,0.2)

  &__back-button:hover &__back-button-arrow
    opacity 0.8

  &__back-button:active &__back-button-arrow
    opacity 0.5

  &__top-info-wrapper
    absolute bottom left right

  &__content-container
    position relative
    max-width 1060px
    margin 0 auto
    padding 0 30px

  &__top-info-container
    padding-bottom 50px
    padding-left 290px

  &__title
    font-size 3.6em
    color #FFF
    text-shadow 0px 2px 0px #000
    line-height 1em
    margin-bottom 12px

  &__subtitle
    text-align left

  &__stars
    display inline-block
    height 30px
    width 174px
    margin-right: 14px;
    background-repeat no-repeat
    transition opacity 0.2s ease
    background-size 174px

  &__stars--grey
    background-image url('assets/stars-grey.svg')

  &__stars--orange
    width 50%
    background-image url('assets/stars-orange.svg')

  &__seasons-episodes
    display inline-block
    margin-top 1px
    font-size 1.5em
    vertical-align top
    color rgba(255, 255, 255, 0.85)
    text-shadow 0px 2px 0px #000

  &__watch-button
    absolute bottom -32px left 290px
    border-radius 6px
    background linear-gradient(to bottom, #fff 0%, #eaeaea 100%)
    box-shadow 0px 1px 0px 0px rgba(0,0,0,0.3), 0px 3px 10px 0px rgba(0,0,0,0.2)
    transition all 0.1s ease
    border 1px solid #238200
    color #165100
    padding 12px 20px
    font-size 1.9em
    text-decoration none
    animation-name details-watch-button-animation
    animation-duration animation-duration
    animation-fill-mode forwards
    animation-timing-function ease

  &__watch-button--disabled
    border 1px solid #afafaf
    color #bdbdbd

  &__watch-button--enabled:hover
    transform translateY(-1px)
    box-shadow 0px 2px 0px 0px rgba(0,0,0,0.3), 0px 4px 14px 0px rgba(0,0,0,0.2)
    color #278e00
    border 1px solid #238200

  &__watch-button--enabled:active
    transform translateY(1px)
    box-shadow 0px 0px 0px 0px rgba(0,0,0,0.3), 0px 1px 6px 0px rgba(0,0,0,0.2)
    color #0d3100

  &__poster-tile
    absolute bottom -156px left 30px
    animation-name details-poster-tile-animation
    animation-duration animation-duration
    animation-fill-mode forwards
    animation-timing-function ease

  &__bottom-wrapper
    position relative
    z-index 1
    padding: 68px 0 80px 0;
    animation-name details-bottom-wrapper-animation
    animation-duration animation-duration
    animation-fill-mode forwards
    animation-timing-function ease

  &__facts
    position relative
    margin 0 0 60px 260px
    min-height: 54px;

  &__fact
    display inline-block
    margin-right 50px

  &__fact-label
    font-size 1.3em
    color #959595

  &__fact-value
    font-size 1.3em

  &__overview
    position relative
    font-size 1.3em
    line-height 1.8em
