@import 'nib'

.GitHubBanner
	absolute top -5px right -5px
	opacity 0.7
	width 201px
	height 201px
	background-image url('./assets/github-banner.svg')
	background-repeat no-repeat
	transition all 0.1s ease

	&:hover
		absolute top 0 right 0
		opacity 1

	&:active
		absolute top -3px right -3px
		opacity 1
		transition all 0s ease
